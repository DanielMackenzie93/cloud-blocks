{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "rootDir": "src",
    "declaration": true,
    "composite": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "declarationDir": "dist",
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "./docs-site",
    "./dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "node_modules"
  ]
}
